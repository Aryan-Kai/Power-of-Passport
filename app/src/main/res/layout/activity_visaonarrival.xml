<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".visaonarrival"
    android:background="@drawable/map">

    <TextView
        android:id="@+id/txtvoastatus"
        android:layout_width="143dp"
        android:layout_height="53dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="26dp"
        android:text="Visa Status"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/recylerview2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444" />

    <TextView
        android:id="@+id/txtvoacountryname"
        android:layout_width="151dp"
        android:layout_height="51dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="33dp"
        android:text="Country Name"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/recylerview2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/txtvoastatus"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recylerview2"
        android:layout_width="379dp"
        android:layout_height="503dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/map"
        android:paddingLeft="20dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>